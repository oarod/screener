<%= grid @evidence_grid do |g|
  g.column name: 'Identifier', attribute: 'identifier'
  g.column name: 'Title', attribute: 'title'
  g.column name: 'Name of Person', attribute: 'name', assoc: :person
  g.column name: 'Page 1 Summary', attribute: 'text', assoc: :pages do |evidence|
    page_one_summary evidence
  end
end %>
